<div class="container">
  <div class="row">
    <div class="col-md-7 mt-5 offset-md-5">
      <h2>ユーザー一覧</h2>
    </div>

    <div class="col-md-12 mt-5 d-flex justify-content-center">

    <!--テーブルの幅の横幅が足りなくなった場合に、横スクロールさせる-->
    <div class="table-responsive">
      <table class="table table-hover table-condensed">
        <thead>
          <tr>
            <th></th>
            <th>ニックネーム</th>
            <th>ひとこと</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
          <tr>
          <td class="align-middle">
            <%= link_to user_path(user) do %>
              <%= image_tag user.get_image(100,100), class: "rounded-circle" %>
            <% end %>
          </td>
          <td class="align-middle">
            <%= user.name %>
          </td>
          <td class="align-middle">
            <%= user.personal_comment %>
          </td>
          <td class="align-middle">
            <%= link_to "詳細", user_path(user), class: "btn btn-success" %>
          </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>


    </div>
  </div>
</div>
