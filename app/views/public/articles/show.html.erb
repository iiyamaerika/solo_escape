<div class="container-fluid">
  <div class="row">
    
    <div class="col-md-12 mt-5">
      <h1 class="text-center mb-3">投稿詳細</h1>
    </div>
    
    <div class="col-md-12 mt-5">
      <div class="card-deck">
        <div class="col-md-6 offset-sm-5">
          <div class="card shadow mb-3 rounded" style="width: 20rem;">
            
            <div class="card-body">
              <p class="card-text"><%= @article.user.nickname %></p>
              <p class="card-text"><%= @article.text %></p>
              <% if @article.image.present? %>
                <div class="card-image-bottom">
                  <%= image_tag @article.image, size: "260x180" %>
                </div>
              <% end %>
              <p class="card-text text-right"><small class="text-muted"><%= @article.created_at.strftime('%Y/%m/%d') %></small></p>
            </div>
            
            <% if @article.user == current_user %>
            <div class="col-md-12 text-right mb-2">
              <%= link_to "編集", edit_article_path(@article),class: "btn btn-success" %>
            </div>
            <div class="col-md-12 text-right mb-2">
              <%= link_to "削除", article_path(@article), method: :delete, class: "btn btn-danger", data: { confirm: '投稿記事を削除します。よろしいですか？' } %>
            </div>
            <% end %>
            
          </div>
        </div>
      </div>
    </div>

  </div>
</div>