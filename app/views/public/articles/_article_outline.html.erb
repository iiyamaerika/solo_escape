<div class="card-deck">
  <% articles.each do |article| %>
    <div class="col-md-3">
      <div class="card shadow mb-3 rounded" style="width: 20rem;">
        <div class="card-body">
          <p class="card-text"><%= article.user.nickname %></p>
          <p class="card-text"><%= article.text %></p>
          <% if article.image.present? %>
            <div class="card-image-bottom">
              <%= image_tag article.image, size: "260x180" %>
            </div>
          <% end %>
          <p class="card-text text-right"><small class="text-muted"><%= article.created_at.strftime('%Y/%m/%d') %></small></p>
          <%= link_to "詳細へ", article_path(article), class: "btn btn-primary stretched-link" %>
        </div>
      </div>
    </div>
  <% end %>
</div>