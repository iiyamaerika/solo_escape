<div class="container">
  <div class="row">
    <div class="col-md-12 mt-5 d-flex justify-content-center">
      <h2>ダイエットを記録する</h2>
    </div>
    <div class="col-md-12 mt-5 mb-5 d-flex justify-content-center">
      <%= form_with model: @weight, url: diets_path, local: true do |f| %>

      <div class="date">
        <%= f.label :date %>
        <%= f.date_select :date %>
      </div>
    
      <div class="weight">
        <%= f.label :weight %>
        <%= f.text_field :weight %>
      </div>
    
      <div class="submit">
        <%= f.hidden_field :user_id, value: current_user.id %>
        <%= f.submit "送信" %>
      </div>
    
    <% end %>
    </div>
  </div>
</div>