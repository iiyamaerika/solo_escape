<%= form_with model: @weight, url: diets_path, local: true do |f| %>

  <div class="date">
    <%= f.label :date %>
    <%= f.date_select :date %>
  </div>

  <div class="weight">
    <%= f.label :weight %>
    <%= f.text_field :weight %>
  </div>

  <div class="submit">
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.submit "送信" %>
  </div>

<% end %>